	fromcolour1="$fromcolour"
	from=$(concat "$from1" 0 $fromlen)

	subject1=$(echo "$scan" | grep -E "(^SUMMARY:)|(^Subject:)" | sed "$subjectsrch" | grep -Ev "(^SUMMARY)|(^Subject:)")
