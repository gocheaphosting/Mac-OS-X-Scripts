#!/bin/sh

# align

# Usage: align <filename> <delimiter> <delimiter>

cFILE=$1
cDELIM1="  install  "
cDELIM2=" "

cat $cFILE | sed '

	s/\(^.*  [a-z].\) \(.*\)$/\1                       \2/
	s/\(^.*  [a-z]..\) \(.*\)$/\1                      \2/
	s/\(^.*  [a-z]...\) \(.*\)$/\1                     \2/
	s/\(^.*  [a-z]....\) \(.*\)$/\1                    \2/
	s/\(^.*  [a-z].....\) \(.*\)$/\1                   \2/
#	s/\(^.*  [a-z]......\) \(.*\)$/\1                  \2/
#	s/\(^.*  [a-z].......\) \(.*\)$/\1                 \2/
#	s/\(^.*  [a-z]........\) \(.*\)$/\1                \2/
#	s/\(^.*  [a-z].........\) \(.*\)$/\1               \2/
#	s/\(^.*  [a-z]..........\) \(.*\)$/\1              \2/
#	s/\(^.*  [a-z]...........\) \(.*\)$/\1             \2/
#	s/\(^.*  [a-z]............\) \(.*\)$/\1            \2/
#	s/\(^.*  [a-z].............\) \(.*\)$/\1           \2/
#	s/\(^.*  [a-z]..............\) \(.*\)$/\1          \2/
#	s/\(^.*  [a-z]...............\) \(.*\)$/\1         \2/
#	s/\(^.*  [a-z]................\) \(.*\)$/\1        \2/
#	s/\(^.*  [a-z].................\) \(.*\)$/\1       \2/
#	s/\(^.*  [a-z]..................\) \(.*\)$/\1      \2/'
